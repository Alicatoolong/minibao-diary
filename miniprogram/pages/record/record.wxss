.container {
  padding: 30rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4edf5 100%);
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 38rpx;
  font-weight: bold;
  color: #2c3e50;
  display: block;
}

.section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.label {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 15rpx;
}

.sub-label {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-bottom: 20rpx;
  display: block;
}

/* 时间选择样式 */
.time-row {
  display: flex;
  justify-content: space-between;
}

.time-item {
  flex: 1;
  margin: 0 10rpx;
}

.time-label {
  display: block;
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 10rpx;
}

.time-picker {
  padding: 20rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
  color: #2c3e50;
  background: #f8f9fa;
}

/* 情况类型网格 */
.type-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.type-item {
  flex: 0 0 calc(50% - 20rpx);
  margin: 10rpx;
  padding: 25rpx 15rpx;
  text-align: center;
  border: 2rpx solid #e1e8ed;
  border-radius: 15rpx;
  font-size: 26rpx;
  color: #5d6d7e;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.type-item.active {
  background: #3498db;
  color: white;
  border-color: #3498db;
  transform: scale(1.05);
}

/* 严重程度 */
.severity-container {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.severity-item {
  flex: 1;
  margin: 0 8rpx;
  padding: 20rpx 10rpx;
  text-align: center;
  border: 2rpx solid #e1e8ed;
  border-radius: 15rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.severity-item.active {
  background: #e74c3c;
  color: white;
  border-color: #e74c3c;
  transform: scale(1.05);
}

.severity-number {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
}

.severity-desc {
  display: block;
  font-size: 20rpx;
  margin-top: 5rpx;
}

/* 饮食输入 */
.diet-input {
  margin-top: 20rpx;
  padding: 20rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 12rpx;
  font-size: 26rpx;
  background: #f8f9fa;
}

/* 睡眠质量 */
.sleep-container {
  margin-top: 20rpx;
}

.sleep-item {
  margin-bottom: 30rpx;
}

.sleep-item:last-child {
  margin-bottom: 0;
}

.sleep-label {
  display: block;
  font-size: 26rpx;
  color: #5d6d7e;
  margin-bottom: 15rpx;
}

.quality-container {
  display: flex;
  justify-content: space-between;
  margin-top: 15rpx;
}

.quality-item {
  flex: 1;
  margin: 0 5rpx;
  padding: 15rpx 8rpx;
  text-align: center;
  border: 2rpx solid #e1e8ed;
  border-radius: 12rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.quality-item.active {
  background: #2ecc71;
  color: white;
  border-color: #2ecc71;
}

.quality-number {
  display: block;
  font-size: 24rpx;
  font-weight: bold;
}

.quality-desc {
  display: block;
  font-size: 18rpx;
  margin-top: 3rpx;
}

/* 备注输入 */
.notes-input {
  width: 100%;
  height: 150rpx;
  padding: 20rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 12rpx;
  font-size: 26rpx;
  background: #f8f9fa;
  box-sizing: border-box;
}

.word-count {
  display: block;
  text-align: right;
  font-size: 22rpx;
  color: #95a5a6;
  margin-top: 10rpx;
}

/* 按钮区域 */
.btn-area {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  gap: 20rpx;
}

.btn-secondary, .record-btn {
  flex: 1;
  padding: 25rpx;
  border: none;
  border-radius: 15rpx;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-secondary {
  background: #95a5a6;
  color: white;
}

.record-btn {
  background: linear-gradient(135deg, #3498db, #2980b9);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(52, 152, 219, 0.3);
}

.record-btn.disabled {
  background: #bdc3c7;
  box-shadow: none;
  transform: none;
}

.record-btn:not(.disabled):active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 10rpx rgba(52, 152, 219, 0.3);
}

/* === 新增：运动强度样式 === */

.intensity-container {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.intensity-item {
  flex: 1;
  margin: 0 5rpx;
  padding: 15rpx 8rpx;
  text-align: center;
  border: 2rpx solid #e1e8ed;
  border-radius: 10rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.intensity-item.active {
  background: #3498db;
  color: white;
  border-color: #3498db;
}

.intensity-text {
  font-size: 24rpx;
  font-weight: 600;
}

/* === 新增：好转日标记样式 === */

.goodday-container {
  text-align: center;
}

.goodday-toggle {
  display: inline-flex;
  align-items: center;
  padding: 20rpx 40rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 50rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
  margin-bottom: 15rpx;
}

.goodday-toggle.active {
  background: #2ecc71;
  color: white;
  border-color: #2ecc71;
  transform: scale(1.05);
}

.goodday-icon {
  margin-right: 15rpx;
  font-size: 32rpx;
}

.goodday-text {
  font-size: 28rpx;
  font-weight: 600;
}

.goodday-hint {
  display: block;
  font-size: 22rpx;
  color: #95a5a6;
  margin-bottom: 20rpx;
}

.improvement-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e1e8ed;
  border-radius: 12rpx;
  font-size: 26rpx;
  background: #f8f9fa;
  box-sizing: border-box;
}

/* === 响应式调整 === */

.form-row {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.half {
  width: 48%;
}