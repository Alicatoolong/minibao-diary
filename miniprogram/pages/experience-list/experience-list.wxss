.exp-list-page {
  min-height: 100vh;
  background-color: #f8f9fa;
}

/* 顶部 */
.page-header {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #eee;
}

.page-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  text-align: center;
}

.post-btn {
  font-size: 26rpx;
  color: #6A8BFF;
}

/* 返回按钮样式 */
.header-back-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  border: 1rpx solid #e8e8e8;
  margin-right: 24rpx;
  transition: all 0.3s ease;
}

.header-back-btn:active {
  background: #f0f0f0;
  transform: scale(0.98);
}

.back-icon {
  font-size: 36rpx;
  color: #333;
  margin-right: 8rpx;
  line-height: 1;
}

.back-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 作用范围 tabs：全部 / 我发布的 */
.scope-tabs {
  display: flex;
  margin: 20rpx 30rpx 0;
  background: #eef2ff;
  padding: 6rpx;
  border-radius: 999rpx;
}

.scope-tab {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #6A6F8F;
  border-radius: 999rpx;
}

.scope-tab.active {
  background: #ffffff;
  color: #4b63ff;
  font-weight: 600;
}

/* 排序 tabs：最热 / 最新 */
.sort-tabs {
  display: flex;
  margin: 16rpx 30rpx 0;
}

.sort-tab {
  margin-right: 20rpx;
  font-size: 24rpx;
  color: #888;
}

.sort-tab.active {
  color: #4b63ff;
  font-weight: 600;
}

/* 列表 */
.page-content {
  padding: 20rpx 30rpx 40rpx;
}

.post-item {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx 26rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.post-top {
  margin-bottom: 6rpx;
}

.post-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.post-middle {
  display: flex;
  justify-content: space-between;
  margin: 4rpx 0 10rpx;
}

.post-author {
  font-size: 24rpx;
  color: #888;
}

.post-time {
  font-size: 22rpx;
  color: #bbb;
}

.post-bottom {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.stat {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #555;
}

.stat-icon {
  margin-right: 4rpx;
}

/* 帖子操作区域 */
.post-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-left: auto;
}

.mine-tag {
  padding: 2rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #9faaf3;
  background: #eef2ff;
}

/* 删除按钮 */
.delete-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #fff5f5;
  border: 1rpx solid #ffccc7;
  border-radius: 16rpx;
  color: #ff4d4f;
  transition: all 0.3s ease;
}

.delete-btn:active {
  background: #ffccc7;
  transform: scale(0.95);
}

.delete-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.delete-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 空状态 */
.no-posts {
  margin-top: 80rpx;
}

.no-posts-title {
  font-size: 28rpx;
  color: #333;
  text-align: center;
  margin-bottom: 10rpx;
}

.no-posts-text {
  font-size: 24rpx;
  color: #888;
  text-align: center;
}
/* 加载更多按钮样式 */
.load-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  margin: 20rpx 0;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e8e8e8;
}

.load-more-text {
  font-size: 28rpx;
  color: #666;
}

.load-more:active {
  background: #e9ecef;
}

/* 没有更多内容提示 */
.no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx;
  margin: 20rpx 0;
}

.no-more-text {
  font-size: 26rpx;
  color: #999;
}