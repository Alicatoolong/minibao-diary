.history-page {
  min-height: 100vh;
  background: #f8fafb;
}

.header-back-btn {
  display: flex;
  align-items: center;
  padding: 8px 0;
}

.back-icon {
  font-size: 22px;
  color: white;
  margin-right: 6px;
  font-weight: bold;
}

.back-text {
  font-size: 16px;
  color: white;
  font-weight: 500;
}

.header-title {
  font-size: 18px;
  font-weight: 600;
  color: white;
  letter-spacing: 0.5px;
}

.header-right {
  width: 60px;
}

/* 图表区域 */
.chart-section {
  background: white;
  margin: 16px;
  border-radius: 16px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.chart-tabs {
  display: flex;
  padding: 0 20px;
  background: #fafbfc;
  border-bottom: 1px solid #eef0f3;
}

.chart-tab {
  flex: 1;
  padding: 18px 0;
  text-align: center;
  position: relative;
  transition: all 0.3s ease;
}

.tab-text {
  font-size: 15px;
  color: #8a94a6;
  font-weight: 500;
  letter-spacing: 0.3px;
  transition: all 0.3s ease;
}

.chart-tab.active .tab-text {
  color: #14b8a6;
  font-weight: 600;
}

.tab-indicator {
  position: absolute;
  bottom: -1px;
  left: 50%;
  transform: translateX(-50%);
  width: 28px;
  height: 3px;
  background: linear-gradient(90deg, #14b8a6, #6a82fb);
  border-radius: 3px;
  opacity: 0;
  transition: all 0.3s ease;
}

.chart-tab.active .tab-indicator {
  opacity: 1;
}

/* 图表容器 */
.chart-container {
  padding: 24px 20px;
}

.chart-header {
  margin-bottom: 24px;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 8px;
}

.chart-title {
  font-size: 17px;
  font-weight: 700;
  color: #1a1d29;
  letter-spacing: 0.3px;
}

.chart-unit {
  font-size: 14px;
  color: #6b7280;
  font-weight: 500;
}

.chart-subtitle {
  font-size: 12px;
  color: #8a94a6;
  background: linear-gradient(135deg, #f0f4ff, #e8edff);
  padding: 4px 12px;
  border-radius: 12px;
  font-weight: 500;
  border: 1px solid #eef2ff;
}

/* 图表区域 */
.chart-area {
  position: relative;
  background: linear-gradient(180deg, #fcfdff 0%, #f8faff 100%);
  border-radius: 12px;
  padding: 20px 0 40px 0;
  border: 1px solid #f0f4ff;
}

.chart-content {
  position: relative;
  height: 160px;
  margin-bottom: 30px;
}

.chart-grid {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.grid-line {
  height: 1px;
  background: linear-gradient(90deg, transparent 10%, #eef2ff 50%, transparent 90%);
}

.chart-line {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.chart-line-path {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  border-radius: 2px;
  opacity: 0.8;
}

.height-line {
  background: linear-gradient(to top, 
  #0891b2 0%, 
    #14b8a6 20%,
    rgba(210, 238, 241, 0.1) 100%);
}

.weight-line {
  background: linear-gradient(to top, 
    rgba(34, 197, 94, 0.8) 0%, 
    rgba(34, 197, 94, 0.4) 50%,
    rgba(34, 197, 94, 0.1) 100%);
}

.chart-point {
  position: absolute;
  transform: translateX(-50%);
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
}

.chart-point:active {
  transform: translateX(-50%) scale(1.1);
}

.point-value {
  font-size: 12px;
  font-weight: 700;
  color: white;
  background: linear-gradient(135deg, #14b8a6, #6a82fb);
  padding: 6px 10px;
  border-radius: 8px;
  box-shadow: 0 4px 12px rgba(79, 106, 245, 0.3);
  margin-bottom: 10px;
  min-width: 40px;
  text-align: center;
  letter-spacing: 0.5px;
}

.chart-line.weight-line .point-value {
  background: linear-gradient(135deg, #10b981, #34d399);
  box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
}

.point-dot {
  width: 12px;
  height: 12px;
  background: white;
  border: 3px solid #4f6af5;
  border-radius: 50%;
  box-shadow: 0 4px 8px rgba(79, 106, 245, 0.4);
  transition: all 0.3s ease;
}

.chart-line.height-line .point-dot {
  border-color: #4f6af5;
  box-shadow: 0 4px 8px rgba(79, 106, 245, 0.4);
}

.chart-line.weight-line .point-dot {
  border-color: #10b981;
  box-shadow: 0 4px 8px rgba(16, 185, 129, 0.4);
}

.chart-point:active .point-dot {
  transform: scale(1.2);
}

/* X轴日期 */
.x-axis {
  position: relative;
  height: 20px;
}

.x-axis-label {
  position: absolute;
  transform: translateX(-50%);
  text-align: center;
}

.x-axis-date {
  font-size: 12px;
  color: #6b7280;
  font-weight: 500;
  letter-spacing: 0.3px;
}

/* 记录列表 */
.record-list {
  background: white;
  margin: 16px;
  border-radius: 16px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  background: linear-gradient(135deg, #f8faff, #f0f4ff);
  border-bottom: 1px solid #eef2ff;
}

.list-title {
  font-size: 16px;
  font-weight: 700;
  color: #1a1d29;
  letter-spacing: 0.3px;
}

.list-count {
  font-size: 13px;
  color: #6b7280;
  font-weight: 500;
  background: white;
  padding: 4px 10px;
  border-radius: 8px;
  border: 1px solid #eef2ff;
}

.record-items {
  padding: 0 20px;
}

.record-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px 0;
  border-bottom: 1px solid #f8faff;
  transition: all 0.3s ease;
}

.record-item:active {
  background: #fafbfc;
  transform: scale(0.98);
}

.record-item:last-child {
  border-bottom: none;
}

.record-main {
  flex: 1;
  display: flex;
  align-items: center;
}

.record-date-info {
  min-width: 85px;
}

.date-main {
  display: block;
  font-size: 16px;
  font-weight: 700;
  color: #1a1d29;
  letter-spacing: 0.3px;
}

.date-weekday {
  display: block;
  font-size: 13px;
  color: #8a94a6;
  margin-top: 4px;
  font-weight: 500;
}

.record-stats {
  flex: 1;
  display: flex;
  align-items: center;
  margin-left: 24px;
  background: linear-gradient(135deg, #f8faff, #f0f4ff);
  padding: 16px;
  border-radius: 12px;
  border: 1px solid #eef2ff;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-label {
  display: block;
  font-size: 12px;
  color: #8a94a6;
  margin-bottom: 6px;
  font-weight: 500;
  letter-spacing: 0.3px;
}

.stat-value {
  font-size: 20px;
  font-weight: 700;
  color: #1a1d29;
  letter-spacing: 0.5px;
}

.stat-unit {
  font-size: 12px;
  color: #6b7280;
  margin-left: 2px;
  font-weight: 600;
}

.stat-divider {
  width: 1px;
  height: 32px;
  background: linear-gradient(180deg, transparent, #eef2ff, transparent);
  margin: 0 20px;
}

.record-actions {
  margin-left: 16px;
}

.delete-btn {
  display: flex;
  align-items: center;
  padding: 10px 16px;
  background: linear-gradient(135deg, #fff5f5, #fed7d7);
  color: #dc2626;
  font-size: 14px;
  border-radius: 10px;
  font-weight: 600;
  border: 1px solid #fecaca;
  transition: all 0.3s ease;
}

.delete-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #fed7d7, #feb2b2);
}

.delete-icon {
  font-size: 16px;
  margin-right: 6px;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  padding: 100px 40px;
  text-align: center;
  background: white;
  margin: 16px;
  border-radius: 16px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  font-size: 72px;
  margin-bottom: 20px;
  opacity: 0.8;
}

.empty-title {
  font-size: 18px;
  color: #1a1d29;
  margin-bottom: 12px;
  font-weight: 700;
  letter-spacing: 0.3px;
}

.empty-desc {
  font-size: 14px;
  color: #6b7280;
  margin-bottom: 32px;
  font-weight: 500;
  line-height: 1.5;
}

.empty-btn {
  padding: 14px 36px;
  background: linear-gradient(135deg, #4f6af5, #6a82fb);
  border-radius: 25px;
  box-shadow: 0 6px 20px rgba(79, 106, 245, 0.3);
  transition: all 0.3s ease;
}

.empty-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4px 15px rgba(79, 106, 245, 0.4);
}

.empty-btn-text {
  color: white;
  font-size: 15px;
  font-weight: 600;
  letter-spacing: 0.5px;
}

/* 页面头部样式 */
.header {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  background: white;
  border-bottom: 1rpx solid #eee;
}

/* 返回按钮样式 */
.header-back-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  border: 1rpx solid #e8e8e8;
  margin-right: 24rpx;
  transition: all 0.3s ease;
}

.header-back-btn:active {
  background: #f0f0f0;
  transform: scale(0.98);
}

.back-icon {
  font-size: 36rpx;
  color: #333;
  margin-right: 8rpx;
  line-height: 1;
}

.back-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}