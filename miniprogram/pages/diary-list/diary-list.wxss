page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
}

/* 修复宽度问题 */
.diary-container {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}

/* 写新日记按钮 - 修复宽度 */
.new-diary-btn {
  background: linear-gradient(135deg, #87CEEB, #4a6fa5);
  color: white;
  border-radius: 16rpx;
  padding: 28rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(106, 141, 255, 0.3);
  width: 100%;
  box-sizing: border-box;
}

.new-diary-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 12rpx rgba(106, 141, 255, 0.3);
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 500;
}

/* 日记项样式 - 修复宽度 */
.diary-item {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border-left: 8rpx solid #87CEEB;
  width: 100%;
  box-sizing: border-box;
}

.diary-item.private {
  border-left-color: #ff6b6b;
}

/* 日记头部 */
.diary-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  width: 100%;
}

.diary-date {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  flex-shrink: 0;
}

.diary-privacy {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.diary-privacy.public {
  background: rgba(106, 141, 255, 0.1);
  color: #87CEEB;
}

.diary-privacy.private {
  background: rgba(255, 107, 107, 0.1);
  color: #ff6b6b;
}

/* 日记内容 - 修复文本溢出 */
.diary-content {
  margin-bottom: 24rpx;
  width: 100%;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.diary-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
  width: 100%;
  word-break: break-word;
}

.diary-mood {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #888;
}

.mood-icon {
  margin-right: 8rpx;
}

/* 日记底部 - 修复布局 */
.diary-footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: wrap;
  width: 100%;
  gap: 16rpx;
}

.diary-tags {
  flex: 1;
  min-width: 0; /* 重要：防止flex项目溢出 */
}

.tag {
  display: inline-block;
  background: #f0f4ff;
  color: #87CEEB;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
  max-width: 100%;
  box-sizing: border-box;
}

/* 操作按钮 - 修复布局 */
.diary-actions {
  display: flex;
  gap: 16rpx;
  flex-shrink: 0;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: 2rpx solid transparent;
  white-space: nowrap;
  flex-shrink: 0;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-btn.delete {
  background: rgba(255, 107, 107, 0.1);
  color: #ff6b6b;
  border-color: rgba(255, 107, 107, 0.2);
}

.action-btn.privacy {
  background: rgba(106, 141, 255, 0.1);
  color: #87CEEB;
  border-color: rgba(106, 141, 255, 0.2);
}

.action-icon {
  margin-right: 6rpx;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #999;
  width: 100%;
  box-sizing: border-box;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 32rpx;
  display: block;
  margin-bottom: 16rpx;
  color: #666;
}

.empty-subtext {
  font-size: 26rpx;
  display: block;
  color: #999;
}

/* 响应式调整 */
@media (max-width: 600rpx) {
  .diary-footer {
    flex-direction: column;
    align-items: stretch;
  }
  
  .diary-tags {
    margin-right: 0;
    margin-bottom: 16rpx;
  }
  
  .diary-actions {
    justify-content: flex-start;
  }
}