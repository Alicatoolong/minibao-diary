<view class="baby-status-page">
  <!-- 顶部状态概览 -->
  <view class="status-header">
    <view class="baby-info">
      <text class="name">{{babyInfo.name || '宝宝'}}</text>
      <text class="age">{{babyInfo.age || '0岁0个月'}}</text>
    </view>
  </view>

  <!-- 健康指标卡片 -->
  <view class="indicators-container">
    
    <!-- 当前状况 -->
    <view class="indicator-card">
      <view class="card-header">
        <text class="card-title">🗣️ 当前状况</text>
        <view class="card-actions">
          <view class="action-btn primary" bindtap="editSymptom">编辑</view>
          <view class="action-btn secondary" bindtap="forceRefreshAll">刷新</view>
          <view class="action-btn danger" bindtap="clearAllSymptoms">清除</view>
        </view>
      </view>

      <view class="card-content symptom-content">
        <!-- 状况列表显示 -->
        <view class="symptom-list-container">
          <view class="symptom-list-text">{{symptomListText || '暂无记录'}}</view>
          <!-- 记录时间 -->
          <view class="record-time" wx:if="{{recordTime}}">{{recordTime}}</view>
          <view class="empty-tip" wx:else>记录宝宝的状况，更好地了解状况</view>
        </view>
        
        <!-- 底部提示 -->
        <view class="view-all-records" bindtap="viewSymptomHistory">
          <text class="record-hint">查看更多内容请点击查看全部记录</text>
          <text class="arrow">→</text>
        </view>
      </view>
    </view>

    <!-- 使用引导卡片 -->
    <view class="indicator-card">
      <view class="card-header">
        <text class="card-title">💡 使用提示</text>
      </view>
      <view class="card-content">
        <view class="tip-list">
          <view class="tip-item">
            <text class="tip-icon">📝</text>
            <text class="tip-text">点击"编辑"记录宝宝的状况</text>
          </view>
          <view class="tip-item">
            <text class="tip-icon">🔄</text>
            <text class="tip-text">点击"刷新"同步最新记录</text>
          </view>
          <view class="tip-item">
            <text class="tip-icon">📚</text>
            <text class="tip-text">查看全部记录了解历史趋势</text>
          </view>
        </view>
      </view>
    </view>

  </view>
</view>