/* 清理过的 baby-status.wxss - 使用英文类名 */

/* 页面样式 */
page {
  background-color: #f8f9fa;
  padding-bottom: 100rpx;
}

.status-header {
  background: linear-gradient(135deg, #87CEEB, #4682B4);
  padding: 50rpx 40rpx;
  color: white;
}

.baby-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.name {
  font-size: 48rpx;
  font-weight: bold;
  margin-right: 30rpx;
}

.age {
  font-size: 32rpx;
  opacity: 0.9;
}

.last-update {
  font-size: 28rpx;
  opacity: 0.8;
}

.indicators-container {
  padding: 40rpx;
}

.indicator-card {
  background: white;
  border-radius: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.card-actions {
  display: flex;
  gap: 20rpx;
}

.history-btn {
  font-size: 24rpx;
  color: #007AFF;
  padding: 8rpx 16rpx;
  border: 1rpx solid #007AFF;
  border-radius: 20rpx;
}

.edit-btn {
  font-size: 24rpx;
  color: #87CEEB;
  padding: 8rpx 16rpx;
  border: 1rpx solid #87CEEB;
  border-radius: 20rpx;
}

.card-content {
  padding: 40rpx;
}

.symptom-display {
  width: 100%;
}

.current-symptom {
  margin-bottom: 20rpx;
}

.symptom-main-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.symptom-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.symptom-severity {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
}

/* 使用英文类名替代中文 */
.symptom-severity.mild {
  background: #e8f5e8;
  color: #52c41a;
}

.symptom-severity.moderate {
  background: #fff7e6;
  color: #fa8c16;
}

.symptom-severity.severe {
  background: #fff2f0;
  color: #ff4d4f;
}

.symptom-details {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.detail-item {
  font-size: 26rpx;
  color: #666;
  background: #f8f9fa;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.symptom-notes {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.notes-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.history-prompt {
  text-align: center;
  padding: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.prompt-text {
  font-size: 26rpx;
  color: #007AFF;
}

.no-records {
  text-align: center;
  padding: 60rpx 30rpx;
}

.no-data-text {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.no-data-hint {
  display: block;
  font-size: 24rpx;
  color: #ccc;
}

.status-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.status-item {
  width: 48%;
  margin-bottom: 20rpx;
}

.status-item.full-width {
  width: 100%;
}

.item-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.item-value {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.sleep-stats {
  display: flex;
  justify-content: space-around;
  text-align: center;
}

.stat-item {
  display: flex;
  flex-direction: column;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #87CEEB;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.supplement-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.supplement-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.supplement-item:last-child {
  border-bottom: none;
}

.supplement-name {
  flex: 2;
  color: #333;
  font-weight: bold;
  font-size: 28rpx;
}

.supplement-dose {
  flex: 1;
  color: #666;
  text-align: center;
  font-size: 26rpx;
}

.supplement-time {
  flex: 1;
  color: #666;
  text-align: right;
  font-size: 26rpx;
}

.empty-state {
  text-align: center;
  color: #999;
  padding: 40rpx;
  font-size: 28rpx;
}

.special-notes {
  background: #f8f9fa;
  padding: 30rpx;
  border-radius: 15rpx;
}

.quick-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 40rpx;
  border-top: 2rpx solid #f0f0f0;
}

.action-btn {
  background: linear-gradient(135deg, #87CEEB, #4682B4);
  color: white;
  padding: 30rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(135, 206, 235, 0.3);
}

.btn-icon {
  margin-right: 16rpx;
  font-size: 36rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: bold;
}

.debug-section {
  margin: 40rpx;
}

.debug-btn {
  background: #f0f0f0;
  color: #666;
  font-size: 24rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}