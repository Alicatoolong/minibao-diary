.baby-status-page {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 40rpx;
}

/* 顶部状态概览 */
.status-header {
  background: white;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.baby-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.age {
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.last-update {
  font-size: 26rpx;
  color: #999;
}

/* 卡片容器 */
.indicators-container {
  padding: 32rpx;
}

.indicator-card {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 0;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 统一按钮样式 */
.card-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: 2rpx solid transparent;
}

.action-btn.primary {
  background: #6BC5D2;
  color: white;
  border-color: #6BC5D2;
}

.action-btn.secondary {
  background: #f5f5f5;
  color: #666;
  border-color: #e0e0e0;
}

.action-btn.danger {
  background: #fff2f0;
  color: #ff6b6b;
  border-color: #ffccc7;
}

/* 卡片内容 */
.card-content {
  padding: 0 32rpx 32rpx;
}

.symptom-content {
  min-height: 120rpx;
}

.symptom-list-container {
  margin-bottom: 24rpx;
}

.symptom-list-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.record-time {
  font-size: 26rpx;
  color: #999;
}

.empty-tip {
  font-size: 28rpx;
  color: #ccc;
  text-align: center;
  padding: 40rpx 0;
}

/* 查看全部记录 */
.view-all-records {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.record-hint {
  font-size: 26rpx;
  color: #999;
}

.arrow {
  font-size: 28rpx;
  color: #6BC5D2;
}

/* 使用提示卡片 */
.tip-list {
  padding: 8rpx 0;
}

.tip-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.tip-item:last-child {
  border-bottom: none;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 48rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}