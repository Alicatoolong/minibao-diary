/* 顶部状态概览 */
.status-header {
  background: linear-gradient(135deg, #87CEEB, #4682B4);
  padding: 32rpx;
  color: white;
  border-radius: 0 0 24rpx 24rpx;
}

.baby-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 16rpx;
}

.name {
  font-size: 40rpx;
  font-weight: bold;
}

.age {
  font-size: 28rpx;
  opacity: 0.9;
}

.last-update {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 健康指标容器 */
.indicators-container {
  padding: 32rpx;
}

/* 指标卡片 */
.indicator-card {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
  overflow: hidden;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 0 32rpx;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.card-actions {
  display: flex;
  gap: 24rpx;
}

.edit-btn {
  color: #6BC5D2;
  font-size: 26rpx;
  padding: 12rpx 20rpx;
  border: 2rpx solid #6BC5D2;
  border-radius: 20rpx;
}

.card-content {
  padding: 0 32rpx 32rpx 32rpx;
}

/* 情况记录样式 */
.symptom-item {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
}

.symptom-main {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.symptom-desc {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
}

.symptom-severity {
  margin-left: 20rpx;
}

.severity-level {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.level-1 { background: #e8f5e8; color: #4caf50; }
.level-2 { background: #fff3e0; color: #ff9800; }
.level-3 { background: #ffebee; color: #f44336; }

.symptom-details {
  display: flex;
  gap: 40rpx;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.detail-item {
  display: flex;
  align-items: center;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-left: 8rpx;
}

/* 查看全部记录样式 */
.view-all-records {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
}

.record-count {
  font-size: 26rpx;
  color: #6BC5D2;
}

.arrow {
  font-size: 28rpx;
  color: #6BC5D2;
}

/* 无记录状态 */
.no-records {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
}

.no-data-text {
  display: block;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.no-data-hint {
  display: block;
  font-size: 24rpx;
  color: #ccc;
}

/* 饮食情况网格 */
.status-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.status-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-label {
  font-size: 24rpx;
  color: #666;
}

.item-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 底部操作 */
.quick-actions {
  padding: 32rpx;
  background: white;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 28rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.action-btn.primary {
  background: #6BC5D2;
  color: white;
}

.btn-icon {
  font-size: 36rpx;
}

.btn-text {
  font-size: 30rpx;
}