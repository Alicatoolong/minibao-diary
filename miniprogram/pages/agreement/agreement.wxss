/* 页面容器 */
.agreement-page {
  min-height: 100vh;
  background: #f8f9fa;
  padding-bottom: 140rpx;
}

/* 头部 */
.agreement-header {
  padding: 30rpx 32rpx;
  background: white;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: center;
  align-items: center;
}

.page-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1a1a1a;
  text-align: center;
}

/* 协议内容 */
.agreement-content {
  height: calc(100vh - 240rpx);
  padding: 32rpx; /* 这个padding会自然限制卡片宽度 */
  box-sizing: border-box;
}

/* 协议卡片 - 修复宽度问题 */
.protocol-section {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  box-sizing: border-box;
  width: 100%; /* 占满整个内容区域 */
}

/* 章节标题 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  line-height: 1.4;
  display: block;
}

/* 内容区域 */
.section-content {
  line-height: 1.6;
  width: 100%;
}

.content-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 24rpx;
  width: 100%;
  word-wrap: break-word;
}

/* 子章节 */
.subsection {
  margin-bottom: 24rpx;
  width: 100%;
}

.subsection-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 12rpx;
  line-height: 1.4;
  width: 100%;
}

.subsection-content {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-line;
  word-wrap: break-word;
  width: 100%;
}

/* 按钮区域 */
.agreement-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx 40rpx;
  background: white;
  border-top: 1rpx solid #eee;
  box-sizing: border-box;
}

.agree-btn {
  width: 100%;
  height: 88rpx;
  background: #6BC5D2;
  color: white;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  box-sizing: border-box;
}