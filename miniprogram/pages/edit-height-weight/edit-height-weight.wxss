.edit-height-weight-page {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 40rpx;
}

.form-container {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.form-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 60rpx;
}

.input-group {
  margin-bottom: 50rpx;
}

.input-label {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  border: 2rpx solid #e8f4fe;
  border-radius: 16rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  background: #fafcff;
  transition: border-color 0.3s;
}

.input-field:focus {
  border-color: #87CEEB;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  line-height: 1.6;
  margin: 40rpx 0;
  padding: 20rpx;
  background: #f0f8ff;
  border-radius: 12rpx;
}

/* 按钮区域 */
.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 60rpx;
}

.back-btn {
  flex: 1;
  height: 100rpx;
  background: #f8f9fa;
  border: 2rpx solid #e8e8e8;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.back-btn:active {
  background: #f0f0f0;
  transform: scale(0.98);
}

.back-btn-text {
  font-size: 32rpx;
  color: #666;
  font-weight: 500;
}

.save-btn {
  flex: 2;
  height: 100rpx;
  background: #cccccc;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.save-btn.active {
  background: linear-gradient(135deg, #87CEEB, #4682B4);
  box-shadow: 0 4rpx 16rpx rgba(135, 206, 235, 0.3);
}

.save-btn:active {
  transform: scale(0.98);
}

.save-btn-text {
  font-size: 32rpx;
  color: white;
  font-weight: 500;
}