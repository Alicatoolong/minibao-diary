.symptom-history-page {
  min-height: 100vh;
  background: #f8f8f8;
}

/* 头部样式 - 优化版本 */
.header {
  background: white;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 32rpx;
  height: 88rpx;
}

/* 优化返回按钮 */
.back-btn-area {
  flex-shrink: 0;
  padding: 20rpx 0;
  margin: -20rpx 0;
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  border: 1rpx solid #e8e8e8;
  margin-right: 24rpx;
  transition: all 0.3s ease;
}

.back-btn:active {
  background: #f0f0f0;
  transform: scale(0.98);
}

.back-icon {
  font-size: 36rpx;
  color: #333;
  margin-right: 8rpx;
  line-height: 1;
}

.back-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
  margin: 0 20rpx;
}

.placeholder {
  width: 120rpx;
}

/* 历史记录列表 */
.history-list {
  padding: 32rpx;
  padding-bottom: 140rpx; /* 为底部按钮留出空间 */
}

.history-item {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.symptom-desc {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
  margin-right: 20rpx;
}

.severity-badge {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.level-1 { background: #e8f5e8; color: #4caf50; }
.level-2 { background: #fff3e0; color: #ff9800; }
.level-3 { background: #ffebee; color: #f44336; }

.item-details {
  margin-bottom: 24rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
  min-width: 140rpx;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.item-actions {
  display: flex;
  justify-content: flex-end;
  gap: 32rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  color: #6BC5D2;
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border: 2rpx solid #6BC5D2;
  border-radius: 20rpx;
}

.action-btn.delete {
  color: #ff6b6b;
  border-color: #ff6b6b;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 0 200rpx 0; /* 增加底部间距，避免被按钮遮挡 */
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 24rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-tip {
  display: block;
  font-size: 26rpx;
  color: #ccc;
  margin-bottom: 48rpx;
}

.empty-btn {
  display: inline-block;
  background: #6BC5D2;
  color: white;
  padding: 24rpx 48rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 添加加载状态样式 */
.loading-state {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.loading-text {
  display: block;
}

/* 空状态按钮样式优化 */
.empty-btn {
  display: inline-flex;
  align-items: center;
  background: #6BC5D2;
  color: white;
  padding: 24rpx 48rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-arrow {
  margin-left: 8rpx;
  font-weight: bold;
}

/* 底部添加记录按钮 */
.add-record-btn-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  background: linear-gradient(transparent, #f8f8f8 50%);
}

.add-record-btn {
  background: #6BC5D2;
  color: white;
  border-radius: 50rpx;
  padding: 28rpx 0;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(107, 197, 210, 0.3);
}

.add-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
  font-weight: bold;
}

.add-text {
  font-weight: 500;
}