.mood-square {
  min-height: 100vh;
  background: #f8f9fa;
}

/* 搜索栏 */
.search-bar {
  position: relative;
  padding: 20rpx 30rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-input {
  width: 100%;
  height: 70rpx;
  padding: 0 70rpx 0 28rpx;
  background: #f5f5f5;
  border-radius: 35rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  right: 50rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 30rpx;
  color: #999;
}

/* 心情列表 - 修复滚动区域 */
.mood-list {
  height: calc(100vh - 120rpx);
  padding: 0 20rpx;
  box-sizing: border-box;
}

.mood-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 16rpx 0;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  box-sizing: border-box;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.author {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.date {
  font-size: 24rpx;
  color: #999;
}

/* 心情指示器 */
.mood-indicator {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.mood-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.mood-type {
  font-size: 24rpx;
  color: #666;
  background: #f8f9fa;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

/* 内容区域 */
.card-content {
  margin-bottom: 16rpx;
}

.mood-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  word-break: break-word;
}

/* 标签 */
.card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.tag {
  font-size: 22rpx;
  color: #4dabf7;
  background: #e7f5ff;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

/* 互动区域 */
.card-actions {
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 16rpx;
}

.hug-action {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background: #fff5f5;
  border-radius: 18rpx;
  border: 1rpx solid #ff6b6b;
}

.hug-icon {
  font-size: 28rpx;
  margin-right: 6rpx;
}

.hug-count {
  font-size: 24rpx;
  color: #ff6b6b;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 30rpx;
  text-align: center;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}