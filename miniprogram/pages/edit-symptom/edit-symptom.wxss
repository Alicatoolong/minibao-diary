.edit-container {
  padding: 20px;
  background: #f8f9fa;
  min-height: 100vh;
}

.form-section {
  background: white;
  border-radius: 15px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 15px;
}
/* 情况分类提示 */
.symptom-category-hint {
  margin: 20rpx 0;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.category-tag {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 20rpx;
  border: 2rpx solid;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
}

.category-name {
  font-size: 24rpx;
  font-weight: 500;
  margin-right: 16rpx;
}

.weight-badge {
  font-size: 22rpx;
  background: rgba(0,0,0,0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.category-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
}
/* 情况选项样式 - 改为3列布局 */
.symptom-options {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10px;
}

.symptom-option {
  border: 2px solid #f0f0f0;
  border-radius: 10px;
  padding: 12px 8px;
  text-align: center;
  transition: all 0.3s;
  background: white;
}

.symptom-option.selected {
  border-color: #87CEEB;
  background: rgba(135, 206, 235, 0.1);
  transform: scale(0.95);
}

.option-text {
  display: block;
  font-weight: bold;
  color: #333;
  margin-bottom: 4px;
  font-size: 14px;
}

.option-desc {
  display: block;
  font-size: 10px;
  color: #666;
  line-height: 1.2;
}

/* 其他情况输入框 */
.other-input-container {
  margin-top: 15px;
  padding-top: 15px;
  border-top: 1px solid #f0f0f0;
}

.other-input {
  width: 100%;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  padding: 10px 12px;
  font-size: 14px;
}

/* 严重程度选项 */
.severity-options {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 10px;
}

.severity-option {
  border: 2px solid #f0f0f0;
  border-radius: 10px;
  padding: 15px 8px;
  text-align: center;
  transition: all 0.3s;
}

.severity-option.selected {
  border-color: #87CEEB;
  background: rgba(135, 206, 235, 0.1);
  transform: scale(0.95);
}

.severity-icon {
  font-size: 20px;
  margin-bottom: 8px;
}

.severity-label {
  display: block;
  font-weight: bold;
  color: #333;
  margin-bottom: 4px;
}

.severity-desc {
  display: block;
  font-size: 11px;
  color: #666;
  line-height: 1.3;
}

/* 输入组样式 */
.input-group {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.input-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.input-label {
  color: #333;
  font-weight: bold;
  min-width: 100px;
  font-size: 14px;
}

.input-field {
  flex: 1;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  padding: 10px 12px;
  margin-left: 15px;
  font-size: 14px;
}

.description-input {
  width: 100%;
  height: 120px;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  padding: 12px;
  box-sizing: border-box;
  font-size: 14px;
}

.char-count {
  text-align: right;
  color: #999;
  font-size: 12px;
  margin-top: 5px;
}

/* 按钮样式 */
.action-buttons {
  display: flex;
  gap: 15px;
  margin-top: 20px;
}

.btn {
  flex: 1;
  padding: 15px;
  border-radius: 25px;
  text-align: center;
  font-weight: bold;
  font-size: 16px;
}

.btn.secondary {
  background: white;
  color: #87CEEB;
  border: 2px solid #87CEEB;
}

.btn.primary {
  background: linear-gradient(135deg, #87CEEB, #4682B4);
  color: white;
  box-shadow: 0 4px 15px rgba(135, 206, 235, 0.3);
}

/* 自动保存提示 */
.auto-save-hint {
  text-align: center;
  margin-top: 15px;
  padding: 10px;
  background: rgba(135, 206, 235, 0.1);
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.hint-icon {
  font-size: 14px;
}

.hint-text {
  font-size: 12px;
  color: #666;
}