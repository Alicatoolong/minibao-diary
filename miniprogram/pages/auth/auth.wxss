/* 页面容器 */
.agreement-page {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 140rpx;
  box-sizing: border-box;
}

/* 头部样式 - 与现有风格一致 */
.agreement-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  background: white;
  border-bottom: 1rpx solid #eee;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
  margin-right: 120rpx;
}

.header-placeholder {
  width: 120rpx;
}

/* 协议内容卡片 */
.agreement-content {
  height: calc(100vh - 240rpx);
  padding: 32rpx;
  box-sizing: border-box;
}

.agreement-card {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
  margin-bottom: 24rpx;
  min-height: 200rpx;
}

.card-content {
  padding: 40rpx 32rpx;
}

/* 文本样式 */
.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin: 40rpx 0 20rpx;
  line-height: 1.4;
}

.section-title:first-child {
  margin-top: 0;
}

.section-subtitle {
  display: block;
  font-size: 30rpx;
  color: #666;
  margin: 24rpx 0 16rpx;
  line-height: 1.4;
  font-weight: 500;
}

.section-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 24rpx;
  white-space: pre-line;
}

.update-time {
  display: block;
  font-size: 26rpx;
  color: #999;
  text-align: center;
  margin-top: 60rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 按钮区域 */
.agreement-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 32rpx 40rpx;
  background: linear-gradient(transparent, #f8f8f8 30%);
  z-index: 100;
}

.agree-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.agree-btn.primary {
  background: #6BC5D2;
  color: white;
}

.agree-btn.primary:active {
  background: #5ab5c2;
  transform: scale(0.98);
}

/* 响应式调整 */
@media (max-width: 375px) {
  .agreement-content {
    padding: 24rpx;
  }
  
  .agreement-card {
    border-radius: 16rpx;
  }
  
  .card-content {
    padding: 32rpx 24rpx;
  }
  
  .section-title {
    font-size: 30rpx;
  }
  
  .section-text {
    font-size: 26rpx;
  }
}

/* 针对特别小的屏幕 */
@media (max-width: 320px) {
  .agreement-header {
    padding: 24rpx 32rpx;
  }
  
  .agreement-content {
    padding: 20rpx;
  }
  
  .card-content {
    padding: 28rpx 20rpx;
  }
}

