.history-page {
  min-height: 100vh;
  background: #f8f9fa;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  padding: 40rpx 32rpx 32rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.header-back {
  font-size: 48rpx;
  color: #333;
  margin-right: 24rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}
/* 返回按钮样式 */
.header-back-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  border: 1rpx solid #e8e8e8;
  margin-right: 24rpx;
  transition: all 0.3s ease;
}

.header-back-btn:active {
  background: #f0f0f0;
  transform: scale(0.98);
}

.back-icon {
  font-size: 36rpx;
  color: #333;
  margin-right: 8rpx;
  line-height: 1;
}

.back-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}
/* 历史列表 */
.history-list {
  padding: 0 32rpx;
}

.history-item {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 24rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.date-section {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.date {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 16rpx;
}

.weekday {
  font-size: 26rpx;
  color: #999;
}

.record-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-item {
  display: flex;
  align-items: center;
}

.record-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 16rpx;
  width: 120rpx;
}

.record-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
}

.record-emoji {
  font-size: 32rpx;
  margin-left: 16rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
}