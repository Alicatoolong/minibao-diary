.edit-container {
  padding: 20px;
  background: #f8f9fa;
  min-height: 100vh;
}

.form-section {
  background: white;
  border-radius: 15px;
  padding: 20px;
  margin-bottom: 20px;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 15px;
}

.input-field, .picker-field, .health-input {
  width: 100%;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  padding: 12px;
  box-sizing: border-box;
}

.health-input {
  height: 80px;
}

.rating-stars {
  display: flex;
  justify-content: center;
  gap: 10px;
}

.star {
  font-size: 30px;
  opacity: 0.3;
}

.star.active {
  opacity: 1;
}

.action-buttons {
  display: flex;
  gap: 15px;
  margin-top: 30px;
}

.btn {
  flex: 1;
  padding: 15px;
  border-radius: 25px;
  text-align: center;
  font-weight: bold;
}

.btn.secondary {
  background: white;
  color: #87CEEB;
  border: 2px solid #87CEEB;
}

.btn.primary {
  background: #87CEEB;
  color: white;
}